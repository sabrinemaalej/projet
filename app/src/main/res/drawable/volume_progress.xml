<!-- volume_progress.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Fond de la barre de progression -->
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="#CCCCCC" /> <!-- Couleur de fond -->
            <corners android:radius="5dp" /> <!-- Coins arrondis -->
        </shape>
    </item>

    <!-- Progression de la barre de progression -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <solid android:color="#4CAF50" /> <!-- Couleur de progression -->
                <corners android:radius="5dp" /> <!-- Coins arrondis -->
            </shape>
        </clip>
    </item>

    <!-- Poignée de réglage de la progression -->
    <item android:id="@android:id/thumb">
        <shape>
            <solid android:color="#FFFFFF" /> <!-- Couleur de la poignée -->
            <size android:width="20dp" android:height="20dp" /> <!-- Taille de la poignée -->
            <corners android:radius="10dp" /> <!-- Forme de cercle -->
        </shape>
    </item>

</layer-list>
